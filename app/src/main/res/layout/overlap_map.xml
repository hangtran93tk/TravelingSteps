<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/show_map"
    xmlns:android="http://schemas.android.com/apk/res/android">


    -<FrameLayout android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:background="#03B47F">

    <ImageView android:layout_height="35dp"
        android:layout_width="35dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_back_white_28dp"
        android:onClick="cancelActivity"/>

    <EditText android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/edt_change_map_name"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="90dp"/>

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_pencil"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/pencil"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/iv_back"/>

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_share_map"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/gift"
        android:layout_marginRight="10dp"/>

</FrameLayout>


    -<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/imgOverlapMap"
        android:src="@drawable/overlap_map"
        android:layout_marginBottom="150dp"/>

    <Button android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:background="@drawable/ic_custom_button_blue"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="deleteSteps"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/delete_my_steps"/>

</FrameLayout>

</LinearLayout>